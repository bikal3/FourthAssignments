<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_img_dash"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_img_name_dash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_img_dash"
                android:textSize="25dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_img_price_dash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_img_name_dash"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_img_dash"
                android:textSize="25dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_img_desc_dash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_img_price_dash"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_img_dash"
                android:textSize="25dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>